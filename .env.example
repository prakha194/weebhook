# Server port
PORT=8080

# Firestore service account credentials (set these in Render env variables)
# If you export the whole service account JSON as PRIVATE_KEY, make sure to escape newlines when placing in Render.
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-client-email@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Rate limit settings (per api key)
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW_MS=60000

# Timeout for external requests (ms)
EXTERNAL_TIMEOUT_MS=10000